{
  "name": "moneysense-app",
  "version": "0.2.2",
  "scripts": {
    "ng": "ng",
    "start": "ng build --base-href ./ && electron .",
    "serve": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "runapp": "concurrently --kill-others \"npm run start\" \"json-server --watch db.json --port 3003\"",
    "runserve": "concurrently --kill-others \"npm run serve\" \"json-server --watch db.json --port 3003\""
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~13.1.0",
    "@angular/cdk": "^13.3.4",
    "@angular/common": "~13.1.0",
    "@angular/compiler": "~13.1.0",
    "@angular/core": "~13.1.0",
    "@angular/fire": "^7.5.0",
    "@angular/forms": "~13.1.0",
    "@angular/material": "^13.3.4",
    "@angular/material-moment-adapter": "^13.3.9",
    "@angular/platform-browser": "~13.1.0",
    "@angular/platform-browser-dynamic": "~13.1.0",
    "@angular/router": "~13.1.0",
    "devextreme": "22.2.4",
    "devextreme-angular": "22.2.4",
    "electron-packager": "^15.5.2",
    "exceljs": "^4.3.0",
    "file-saver": "^2.0.5",
    "json-server": "^0.17.2",
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.5.28",
    "localbase": "^0.7.5",
    "moment": "^2.29.4",
    "moment-recur": "^1.0.7",
    "moment-recur-ts": "^1.3.1",
    "rrule": "^2.7.2",
    "rxjs": "~7.4.0",
    "tslib": "^2.3.0",
    "uuid": "^9.0.0",
    "write-json-file": "^5.0.0",
    "xlsx": "^0.18.5",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^13.3.4",
    "@angular/cli": "~13.1.2",
    "@angular/compiler-cli": "~13.1.0",
    "@types/file-saver": "^2.0.5",
    "@types/jasmine": "~3.10.0",
    "@types/node": "^12.11.1",
    "@types/uuid": "^9.0.1",
    "concurrently": "^7.1.0",
    "electron": "^18.2.0",
    "electron-builder": "^23.6.0",
    "jasmine-core": "~3.10.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.1.0",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "typescript": "~4.5.2"
  },
  "author": "Bhavik Pathak",
  "build": {
    "appId": "moneySense",
    "dmg": {
      "title": "MacOs Title"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "src/assets/images/logo_1.ico"
    },
    "nsis": {
      "oneClick": true,
      "installerIcon": "src/assets/images/logo.png",
      "uninstallerIcon": "src/assets/images/logo.png",
      "uninstallDisplayName": "Moneysense-unistaller",
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true
    }
  }
}
